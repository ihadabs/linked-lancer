<link rel="stylesheet" href="../css/users.css">
<link rel="stylesheet" href="../css/main.css">

<main>

    <div class="container" style="background-color: white">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <img src="../images/profiles images/profile04.jpg" id="edit-account-image"
                             class="img-circle profile-avatar" alt="User avatar">
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Edit Account</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">First name</label>
                            <div class="col-sm-10">
                                <input type="tel" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Last name</label>
                            <div class="col-sm-10">
                                <input type="tel" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label">E-mail address</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Description</label>
                            <div class="col-sm-10">
                                <textarea rows="3" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-primary"><a class="no-dec-link"
                                                                         href="index.html">Submit</a></button>
                        <button type="reset" class="btn btn-default">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

    
